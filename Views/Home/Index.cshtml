@{
    ViewData["Title"] = "Home - Mitra";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <!-- Hero Section -->
    <section style="background-color: #00c670;" class="text-white text-center py-5">
        <div class="container">
            <h1 class="display-4">Welcome to Mitra</h1>
            <p class="lead">Your go-to destination for premium lifestyle products.</p>
            <a href="/Products" class="btn btn-outline-light btn-lg">Shop Now</a>
        </div>
    </section>

    <!-- Featured Products -->
    <section class="py-5">
        <div class="container">
            <h2 class="text-center mb-4">Featured Products</h2>
            <div class="row">
                <!-- Example Product Card -->
                @foreach (var product in ViewData["FeaturedProducts"] as IEnumerable<Mitra.Models.Product>)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <img src="https://via.placeholder.com/300" class="card-img-top" alt="@product.Name" />
                            <div class="card-body text-center">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text text-muted">@product.Description</p>
                                <p class="fw-bold">$@product.Price</p>
                                <form asp-action="AddToCart" asp-controller="Cart" method="post">
                                    <input type="hidden" name="productId" value="@product.ProductId" />
                                    <input type="hidden" name="quantity" value="1" />
                                    <button type="submit" class="btn btn-primary">Add to Cart</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>


    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3">
        <div class="container">
            <p class="mb-0">&copy; 2024 Mitra. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
