
@{
    @model Mitra.Models.User
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Welcome, Admin</h1>
    <div class="row">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5>Total Products</h5>
                    <p>@ViewBag.TotalProducts</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5>Total Categories</h5>
                    <p>@ViewBag.TotalCategories</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5>Total Users</h5>
                    <p>@ViewBag.TotalUsers</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h5>Total Orders</h5>
                    <p>@ViewBag.TotalOrders</p>
                </div>
            </div>
        </div>
    </div>
</div>
