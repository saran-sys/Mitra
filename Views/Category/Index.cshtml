@{
    @model IEnumerable<Mitra.Models.Category>
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h2>Category List</h2>
<a asp-action="Add" class="btn btn-primary">Add New Category</a>

<table class="table">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Description</th>
            <th>Date Added</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryName</td>
                <td>@category.Description</td>
                <td>@category.DateAdded.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-danger">Delete</a>


                </td>
            </tr>
        }
    </tbody>
</table>
